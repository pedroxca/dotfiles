#!/bin/bash

descricao=$(cat <<'EOF'

Atualiza links simbólicos e permissões dos scripts para acesso geral.

OBS: Precisa da permissão manual antes de ser executado deste script
EOF
)

source $HOME/.scripts/get-description.sh


source $HOME/.scripts/scripts-utils.sh


verifica_comandos() {
  # Verifique se o gum está instalado
  if ! command -v gum &> /dev/null; then
      echo "Erro: o comando 'gum' não está instalado ou não está no PATH."
      exit 1
  fi
  # Verifique se o fzf está instalado
  if ! command -v fzf &> /dev/null; then
      echo "Erro: o comando 'fzf' não está instalado ou não está no PATH."
      exit 1
  fi
  # Verifique se o bat está instalado
  if ! command -v bat &> /dev/null; then
      echo "Erro: o comando 'bat' não está instalado ou não está no PATH."
      exit 1
  fi
  # Verifique se o exa está instalado
  if ! command -v exa &> /dev/null; then
      echo "Erro: o comando 'exa' não está instalado ou não está no PATH."
      exit 1
  fi
  # Verifique se o aha está instalado
  if ! command -v aha &> /dev/null; then
      echo "Erro: o comando 'aha' não está instalado ou não está no PATH."
      exit 1
  fi
  # Verifique se o aha está instalado
  if ! command -v fd &> /dev/null; then
      echo "Erro: o comando 'fd' não está instalado ou não está no PATH."
      exit 1
  fi
}

verifica_comandos


chmod +x $HOME/.scripts/comandos/*
sudo ln -sf $HOME/.scripts/comandos/* /usr/local/bin
